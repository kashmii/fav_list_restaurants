<div class="container">
  <h2 class="d-flex justify-content-center my-4">ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field row mb-3 d-flex justify-content-center">
      <%= f.label :email, class: "col-md-3 form-label required" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-6" %>
    </div>

    <div class="field row mb-4 d-flex justify-content-center">
      <%= f.label :password, class: "col-md-3 form-label required" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "col-md-6" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field row mb-3 d-flex justify-content-center">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions d-flex justify-content-center mt-3 mb-5">
      <%= f.submit "ログインする", class: "btn btn-success" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

  <div class="d-flex justify-content-center mt-3">
    <%= link_to "トップページへ", root_path, class: "btn btn-secondary" %>
  </div>
</div>


