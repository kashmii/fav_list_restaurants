<div class="container">
  <h2 class="d-flex justify-content-center my-4">パスワードをリセットする</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field row mb-3 d-flex justify-content-center">
      <%= f.label :email, class: "col-md-3 form-label required" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-6" %>
    </div>

    <div class="actions d-flex justify-content-center mt-5">
      <%= f.submit "リセットメールを送る", class: "btn btn-success" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
