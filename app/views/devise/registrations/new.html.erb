<div class="container">
  <h2 class="d-flex justify-content-center my-4">会員登録する</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="field row mb-3 d-flex justify-content-center">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>

    <div class="field row mb-3 d-flex justify-content-center">
      <%= f.label :name, class: "col-md-3 form-label required" %>
      <%= f.text_field :name, autofocus: true, class: "col-md-6" %>
    </div>
    <div class="field row mb-3 d-flex justify-content-center">
      <%= f.label :email, class: "col-md-3 form-label required" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-6" %>
    </div>
    <div class="field row mb-3 d-flex justify-content-center">
      <%= f.label :password, class: "col-md-3 form-label required" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "col-md-6" %>
    </div>
    <div class="field row mb-3 d-flex justify-content-center">
      <%= f.label :password_confirmation, class: "col-md-3 form-label required" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-md-6" %>
    </div>

    <div class="actions d-flex justify-content-center mt-5">
      <%= f.submit "登録する", class: "btn btn-success" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

  <div class="d-flex justify-content-center mt-3">
    <%= link_to "トップページへ", root_path, class: "btn btn-secondary" %>
  </div>

</div>