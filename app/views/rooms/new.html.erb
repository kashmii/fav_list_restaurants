<div class="container">
  <h2 class="text-center my-3">部屋を作成する</h2>

  <!-- form_withの引数：model DBに保存するモデルを指定 url postする先のurlを指定 -->
  <%= form_with model: @room, local: true, class: "" do |f| %>
  <div class="field">
    <div class="row mb-3 d-flex justify-content-center">
      <%= render 'layouts/error_messages', model: f.object %>
    </div>

    <div class="row my-3 d-flex justify-content-center">
      <%= f.label :name, class: "col-md-3 form-label required" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-md-6" %>
    </div>
  </div>

    <div class="actions d-flex justify-content-center mt-5">
      <%= f.submit "部屋を作成する", class: "btn btn-success" %>
    </div>

  <div class="d-flex justify-content-center mt-5">
    <%= link_to "戻る", root_path, class: "btn btn-secondary" %>
  </div>
  <% end %>
</div>