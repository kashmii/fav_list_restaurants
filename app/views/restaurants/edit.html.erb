<div class="container">
  <h2 class="text-center mt-3">飲食店を編集する</h2>

  <!-- form_withの引数：model DBに保存するモデルを指定 url postする先のurlを指定 -->
  <%= form_with model: @restaurant, local: true do |f| %>
    <div class="field">

      <div class="row mb-3 d-flex justify-content-center">
        <%= render 'layouts/error_messages', model: f.object %>
      </div>

      <div class="row mb-3 d-flex justify-content-center">
        <%= f.label :name, class: "col-md-3 form-label required" %>
        <%= f.text_field :name, class: "col-md-6", autofocus: true, autocomplete: "name" %>
      </div>
      <div class="row mb-3 d-flex justify-content-center">
        <%= f.label :genre, class: "col-md-3 form-label required" %>
        <%= f.text_field :genre, class: "col-md-6" %>
      </div>
      <div class="row mb-3 d-flex justify-content-center">
        <%= f.label :place, class: "col-md-3 form-label required" %>
        <%= f.text_field :place, class: "col-md-6" %>
      </div>
      <div class="row mb-3 d-flex justify-content-center">
        <%= f.label :holiday, class: "col-md-3 form-label"%>
        <%= f.text_field :holiday, class: "col-md-6" %>
      </div>
      <div class="row mb-3 d-flex justify-content-center">
        <%= f.label :url, class: "col-md-3 form-label" %>
        <%= f.text_field :url, class: "col-md-6" %>
      </div>
      <div class="row mb-3 d-flex justify-content-center">
        <%= f.label :tel, class: "col-md-3 form-label tel" %>
        <%= f.text_field :tel, class: "col-md-6" %>
      </div>
      <div class="row mb-3 d-flex justify-content-center">
        <%= f.label :images, class: "col-md-3 form-label img" %>
        <%= f.file_field :images, accept: 'image/*', class: "col-md-6" %>
        <%= f.hidden_field :images_cache %>
      </div>
    </div>

    <div class="actions submit d-flex justify-content-center">
      <%= f.submit "変更を保存する", class: "btn btn-success" %>
    </div>
  <% end %>

  <div class="d-flex justify-content-center mt-5">
    <%= link_to "戻る", root_path, class: "btn btn-secondary" %>
  </div>
</div>